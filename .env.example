# Tekkit Classic Server Configuration
# Copy this file to .env and customize as needed

# Server Performance
JAVA_MEMORY=3G

# Server Settings
SERVER_PORT=25565
MAX_PLAYERS=20
MOTD=Tekkit Classic Server

# Gameplay
DIFFICULTY=2
PVP=true
ALLOW_FLIGHT=true
VIEW_DISTANCE=10

# Authentication
ONLINE_MODE=true

# ============================================================================
# Setting Explanations:
# ============================================================================
# JAVA_MEMORY: RAM allocation (1G, 2G, 4G, 8G)
# DIFFICULTY: 0=Peaceful, 1=Easy, 2=Normal, 3=Hard
# ONLINE_MODE: true=Verify Minecraft accounts, false=Allow offline play (recommended for private servers)